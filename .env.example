# Supabase Configuration (Required for production, optional for development with mock data)
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# Public URL (Required for password reset emails and auth redirects)
# For production, set this to your deployed URL (e.g., https://chefstack.app)
# For development, leave empty to use localhost:3000
VITE_PUBLIC_URL=https://your-production-domain.com

# Gemini API Key (Optional - for AI features)
VITE_GEMINI_API_KEY=your_gemini_api_key
